{
    "name": "Limonfy Web Extension",
    "short_name": "Limonfy",
    "version": "0.0.1.1",
    "manifest_version": 3,
    "description": "Limonfy: Save and Manage your Links from your favorites Websites",
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs","activeTab"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
          "16": "icons/icon-webextension-16.png",
          "32": "icons/icon-webextension-32.png",
          "48": "icons/icon-webextension-48.png",
          "128": "icons/icon-webextension-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-webextension-16.png",
        "32": "icons/icon-webextension-32.png",
        "48": "icons/icon-webextension-48.png",
        "128": "icons/icon-webextension-128.png"
    }
}
